#############################################
# Example env file (copy to .env.local)
# Values below are placeholders. Do NOT commit real credentials.
#############################################

# --- Client (CRA) ---
# Shorten the splash screen duration (ms)
REACT_APP_SPLASH_DELAY_MS=1000
# Optional external Surprise URL (defaults to Netlify hbd-card)
REACT_APP_SURPRISE_URL=https://hbd-card.netlify.app/

# DatoCMS tokens (optional). If unset, UI will skip data gracefully.
REACT_APP_DATOCMS_ROR_TOKEN=
REACT_APP_DATOCMS_JAVA_TOKEN=
REACT_APP_DATOCMS_FRONTEND_TOKEN=
REACT_APP_DATOCMS_NODE_TOKEN=
REACT_APP_DATOCMS_DEFAULT_TOKEN=

# --- Server / API ---
# Vercel/Neon Postgres connection string (required for /api/wishes on Vercel)
DATABASE_URL=postgres://USER:PASS@HOST/db

# Local/Render server settings
API_PORT=4000
DISABLE_EMAIL=1
WISHES_MAX=0
WISHES_MAX_MB=1.5
WISHES_BACKUP_KEEP=5

# SMTP (optional if you enable email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=""
TO_EMAIL=""
