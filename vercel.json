{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "framework": "create-react-app",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    {
      "source": "/((?!api|static|favicon\\.ico|robots\\.txt|manifest\\.json|asset-manifest\\.json|.*\\.[^/]+$).*)",
      "destination": "/"
    }
  ]
}
