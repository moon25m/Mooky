# Example environment variables for production (do NOT commit real secrets)
# Copy this file to .env.local when running locally (but DO NOT commit .env.local)

# Admin secret used by server-side DELETE; must be set in Vercel project settings
MOOKY_ADMIN_PASS=changeme

# Neon/Postgres connection string (required in production)
DATABASE_URL=postgres://USER:PASS@HOST:5432/dbname

# For CRA builds: public admin pass (optional, used only in non-production client-side dev)
REACT_APP_MOOKY_ADMIN_PASS=changeme

# If using Next public envs instead
NEXT_PUBLIC_MOOKY_ADMIN_PASS=changeme

# Optional: Pusher/Realtime
PUSHER_APP_ID=
PUSHER_KEY=
PUSHER_SECRET=
PUSHER_CLUSTER=
NEXT_PUBLIC_PUSHER_KEY=
NEXT_PUBLIC_PUSHER_CLUSTER=

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=""
TO_EMAIL=""
